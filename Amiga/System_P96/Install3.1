;ClassicWB Install 3.1 Install

LAB START

cls

echo ""
echo "Please Insert Install 3.1 disk into DF0:"
echo ""
ASK "Press Return to Continue."

IF NOT EXISTS DF0:HDTools/BRU
  SKIP FAIL
ENDIF

IF "`SYS:c/which DF0:`" EQ "Install3.1:"
  echo ""
  echo ""
  echo "Disk appears to be Install 3.1 release."
  SKIP PASS
ELSE
  SKIP FAIL
ENDIF

LAB FAIL

echo ""
echo ""
echo "This is not a valid Install disk"
echo ""
echo "...installation cannot continue."
echo ""
ASK "Press return to try again."
SKIP START BACK

LAB PASS

echo ""
echo "Valid Install disk found!"
wait 4

cls

echo ""
echo "Installing ClassicWB..."


